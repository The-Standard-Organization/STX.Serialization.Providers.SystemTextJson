<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>disable</Nullable>
		<Title>STX.Serialization.Providers.SystemTextJson</Title>
		<Product>STX.Serialization.Providers.SystemTextJson</Product>
		<PackageId>STX.Serialization.Providers.SystemTextJson</PackageId>
		<Authors>The Standard Community</Authors>
		<Company>The Standard Community</Company>
		<Description>A Standardized .NET library that provides a serialilzation / deserialization using Newtonsoft.Json</Description>
		<Copyright>The Standard Community 2024 (c)</Copyright>
		<PackageIcon>Serialization.png</PackageIcon>
		<PackageProjectUrl>https://github.com/The-Standard-Organization/STX.Serialization.Providers.SystemTextJson</PackageProjectUrl>
		<RepositoryUrl>https://github.com/The-Standard-Organization/STX.Serialization.Providers.SystemTextJson</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>.NET; Newtonsoft; Json; Serialization; Deserialization; The Standard</PackageTags>
		<PackageReleaseNotes>
			This is a beta release of our SystemTextJson provider.
		</PackageReleaseNotes>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<Version>0.0.1</Version>
		<AssemblyVersion>0.0.1</AssemblyVersion>
		<FileVersion>0.0.1</FileVersion>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>License.txt</PackageLicenseFile>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\README.md">
			<Pack>true</Pack>
			<PackagePath></PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Include="..\License.txt">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
		<None Include="..\Resources\Images\Serialization.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="STX.Serialization.Providers.Abstractions" Version="0.1.2" />
		<PackageReference Include="System.Text.Json" Version="8.0.3" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="STX.Serialization.Providers.SystemTextJson.Tests.Unit" />
		<InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
	</ItemGroup>

</Project>
